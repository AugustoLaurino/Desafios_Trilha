{
  "env": {
    "browser": false,
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser", // Especifica o parser do TypeScript
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended", // Regras recomendadas para TypeScript
    "plugin:prettier/recommended" // Integração com Prettier
  ],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error"], // Marca variáveis não usadas como erro
    "space-before-function-paren": "off", //Remover espaçamento entre o nome da função e os parênteses
    "no-console": "warn" //Alertar se eu esquecer algum console.log
  }
}
